CREATE table Marriage_partner (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    person1_id INTEGER,
    person2_id INTEGER);
INSERT INTO Marriage_partner (person1_id, person2_id)
    VALUES (1, 2);
INSERT INTO Marriage_partner (person1_id, person2_id)
    VALUES (3, 6);
INSERT INTO Marriage_partner (person1_id, person2_id)
    VALUES (4, 8);
INSERT INTO Marriage_partner (person1_id, person2_id)
    VALUES (5, 7);
SELECT a.fullname, a.age, c.movie_song as 'known by', b.fullname as Spouse , b.age FROM marriage_partner
        JOIN celebrity a
        ON marriage_partner.person1_id= a.id
        JOIN celebrity b
        ON marriage_partner.person2_id= b.id
        JOIN Known_for c
        ON marriage_partner.person1_id= c.id
       
